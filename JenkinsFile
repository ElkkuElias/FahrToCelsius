pipeline {
  agent any 
 tools {
        maven 'maven'
    }
  stages{
    stage ('checkout') {
      steps{
        git branch: 'master', url: 'https://github.com/ElkkuElias/FahrToCelsius.git'
        }
    }
    stage ('Build'){
      steps{
         bat 'mvn clean verify'
      }
    }
    stage ('Test'){
      steps{
        bat 'mvn test'
      }
        post{  
          success{
              junit '**/target/surefire-reports/TEST-*.xml'
              jacoco(execPattern: '**/target/jacoco.exec')
    }
  }
}
}
}
